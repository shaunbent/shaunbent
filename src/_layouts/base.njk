<!doctype html>
<html class="no-js" lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ title | default("Shaun Bent | Engineering Manager, Design System Leader & Accessibility Advocate") }}</title>
  <link rel="stylesheet" href="/css/style.css">
  <meta name="description" content="{{ description | default(site.description) }}">
  {% if originalUrl %}
  <link rel="canonical" href="{{ originalUrl }}">
  {% endif %}

  {# Open Graph Tags #}
  <meta property="og:type" content="{% if layout == 'article.njk' %}article{% else %}website{% endif %}">
  <meta property="og:site_name" content="{{ site.name }}">
  <meta property="og:locale" content="{{ site.locale }}">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:title" content="{{ title | default(site.title) }}">
  <meta property="og:description" content="{{ description | default(site.description) }}">

  {# Article-specific OG image or fallback to default #}
  {% if image %}
    {% set ogImageUrl = image | ogImage(page.inputPath) %}
    {% if ogImageUrl %}
    <meta property="og:image" content="{{ site.url }}{{ ogImageUrl }}">
    <meta property="og:image:alt" content="{{ imageAlt | default(title) }}">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    {% else %}
    <meta property="og:image" content="{{ site.url }}{{ site.image.default }}">
    <meta property="og:image:alt" content="{{ site.image.alt }}">
    <meta property="og:image:width" content="{{ site.image.width }}">
    <meta property="og:image:height" content="{{ site.image.height }}">
    {% endif %}
  {% else %}
    <meta property="og:image" content="{{ site.url }}{{ site.image.default }}">
    <meta property="og:image:alt" content="{{ site.image.alt }}">
    <meta property="og:image:width" content="{{ site.image.width }}">
    <meta property="og:image:height" content="{{ site.image.height }}">
  {% endif %}

  {# Article-specific metadata #}
  {% if layout == 'article.njk' and date %}
  <meta property="article:published_time" content="{{ date | htmlDateString }}T00:00:00Z">
  {% if modifiedDate %}<meta property="article:modified_time" content="{{ modifiedDate | htmlDateString }}T00:00:00Z">{% endif %}
  <meta property="article:author" content="{{ site.author.url }}">
  {% endif %}

  {# Twitter Card Tags #}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title | default(site.title) }}">
  <meta name="twitter:description" content="{{ description | default(site.description) }}">
  {% if image %}
    {% set ogImageUrl = image | ogImage(page.inputPath) %}
    {% if ogImageUrl %}
    <meta name="twitter:image" content="{{ site.url }}{{ ogImageUrl }}">
    <meta name="twitter:image:alt" content="{{ imageAlt | default(title) }}">
    {% else %}
    <meta name="twitter:image" content="{{ site.url }}{{ site.image.default }}">
    <meta name="twitter:image:alt" content="{{ site.image.alt }}">
    {% endif %}
  {% else %}
    <meta name="twitter:image" content="{{ site.url }}{{ site.image.default }}">
    <meta name="twitter:image:alt" content="{{ site.image.alt }}">
  {% endif %}

  <link rel="icon" href="/favicon.ico" sizes="any">
  <link rel="icon" href="/icon.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/icon.png">

  <link rel="manifest" href="/site.webmanifest">
  <meta name="theme-color" content="#fafafa">

  {# Structured Data (JSON-LD) #}
  {% if layout == 'article.njk' %}
    {% include "schema-article.njk" %}
  {% else %}
    {% include "schema-person.njk" %}
  {% endif %}

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'GTM-WQ73GT2Q');
  </script>
</head>

<body data-theme="light">
  {{ content | safe }}
</body>
</html>
